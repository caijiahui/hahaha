<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>研华超级导航</title>
    <link href="~/Scripts/css/font-awesome.css" rel="stylesheet" />
    <link href="~/Scripts/css/layout.css" rel="stylesheet" />
    <link href="~/Scripts/elementUI/lib/theme-chalk/index.css" rel="stylesheet" />
    <script src="~/Scripts/Vue/Vue.js"></script>
    <script src="~/Scripts/Vue/axios.js"></script>
    <script src="~/Scripts/elementUI/lib/index.js"></script>
    <script src="~/Scripts/Vue/polyfill.min.js"></script>
    <style>
        #mainbox{
            position:relative;
        }
        #mainbox .menu{
            position:absolute;
            top:50%;
            transform:translateY(-50%);
            right:-18px;
            z-index:10
        }
        #mainbox .menu span {
            display:inline-block;
            width: 18px;
            height:60px;
            line-height:60px;
            text-align:center;
            border:1px solid #ddd;
            font-size:18px;
            color:#fff;
            border-radius: 0 20px 20px 0;
            border-left:0;
            background: #cad2da;
            cursor:pointer;
        }
            #mainbox .menu span:hover {
                background: #6e93b7
            }
    </style>
</head>
<body>

    <div  >
        <div class="boxWrap">
            <div style="display:flex;flex-direction:column;height:100vh">
                <div id="headerid" v-cloak style="z-index:100">
                    <el-header>
                        <div class="nav-left">
                            <div class="brand">
                                <img src="~/Images/logo.png" />
                            </div>
                            <div class="plat-info">HR 考试平台</div>
                            
                        </div>
                        <div class="nav-right">
                            <ul>
                                <li class="user-info">
                                    <el-dropdown>
                                        <span class="el-dropdown-link">
                                            {{admin}}<i class="el-icon-arrow-down el-icon--right"></i>
                                        </span>
                                        <el-dropdown-menu slot="dropdown">
                                            <el-dropdown-item disabled>hi,{{admin}}</el-dropdown-item>
                                            <el-dropdown-item>个人中心</el-dropdown-item>
                                            <el-dropdown-item divided>登出</el-dropdown-item>
                                        </el-dropdown-menu>
                                    </el-dropdown>
                                </li>
                            </ul>
                        </div>
                    </el-header>
                </div>
                
                <div style="display:flex;flex:1" class="nextWrap">
                    <div id="mainbox" v-cloak>
                        <div class="menu" >
                            <span @@click="toggleColl">
                                <i :class="isCollapse?'el-icon-arrow-right':'el-icon-arrow-left'"></i>
                            </span>
                            @*<el-button type="primary" :plain="isCollapse" @@click="toggleColl">
                                <i class="fa fa-bars" ></i>
                            </el-button>*@
                        </div>
                        <el-aside width="auto" style="height:100%">
                            <el-menu default-active="1"
                                     class="el-menu-vertical-demo"
                                     @@open="asideHandleOpen"
                                     @@close="asideHandleClose"
                                     :unique-opened='true'
                                     :collapse="isCollapse">

                                <el-submenu index="1">
                                    <template slot="title">
                                        <i class="el-icon-location"></i>
                                        <span>
                                            <a href="@Url.Action("MaintainExamType", "PEMain",new {tname="Engineering" })">
                                                <span class="title">考试管理</span>
                                            </a>
                                        </span>
                                        
                                    </template>
                                    <el-menu-item-group>
                                        <el-menu-item index="1-1">考试类型</el-menu-item>
                                        <el-menu-item index="1-2">选项2</el-menu-item>
                                    </el-menu-item-group>
                                </el-submenu>
                                <el-submenu index="2">
                                    <template slot="title">
                                        <i class="el-icon-menu"></i>
                                        <span slot="title">人事管理类</span>
                                    </template>
                                    <el-menu-item-group>
                                        <el-menu-item index="1-1">选项1</el-menu-item>
                                        <el-menu-item index="1-2">选项2</el-menu-item>
                                        <el-menu-item index="1-3">选项3</el-menu-item>
                                        <el-menu-item index="1-4">选项4</el-menu-item>
                                        <el-menu-item index="1-5">选项5</el-menu-item>
                                        <el-menu-item index="1-6">选项6</el-menu-item>
                                    </el-menu-item-group>
                                </el-submenu>
                                <el-menu-item index="3">
                                    <i class="el-icon-document"></i>
                                    <span slot="title">员工福利类</span>
                                </el-menu-item>
                                <el-menu-item index="4">
                                    <i class="el-icon-setting"></i>
                                    <span slot="title">部门网站类</span>
                                </el-menu-item>
                                <el-menu-item index="5">
                                    <i class="el-icon-setting"></i>
                                    <span slot="title">设计研发类</span>
                                </el-menu-item>
                                <el-menu-item index="6">
                                    <i class="el-icon-setting"></i>
                                    <span slot="title">IFactory4.0</span>
                                </el-menu-item>
                                <el-menu-item index="7">
                                    <i class="el-icon-setting"></i>
                                    <span slot="title">系统厂专属</span>
                                </el-menu-item>
                            </el-menu>
                        </el-aside>
                    </div>
                    
                    <div style="flex:1;display:flex;flex-direction:column;overflow:auto">
                        @RenderBody()
                        <footer style="height:60px;padding:0 20px;color:#333;text-align:center">
                            <div id="advan-footer">
                                <div class="row-maxwidth-98pct">
                                    <ul class="footer-copyright clearfix">

                                        <li id="footer-info-privacy"><a href="https://beian.miit.gov.cn/#/Integrated/recordQuery">苏ICP备11055982号</a></li>
                                    </ul>
                                    <div class="clear"></div>
                                </div>
                            </div>
                        </footer>

                    </div>

                </div>
            </div>
        </div>

    </div>
    
    <!-- Yoursite Scripts -->
    <script>
        new Vue({
            el: "#headerid",
            data: {
                nowyear: '',
                isMobileTurn: false,
                mobileMenuDrawer: false,
                admin: 'Admin',
            },
            mounted: function () {
                var date = new Date();
                this.nowyear = date.getFullYear();

                if (this.isMobile()) {
                    this.isMobileTurn = true
                } else {
                    this.isMobileTurn = false
                }
            },
            methods: {
                isMobile() {
                    let flag = navigator.userAgent.match(/(phone|pad|pod|iPhone|iPod|ios|iPad|Android|Mobile|BlackBerry|IEMobile|MQQBrowser|JUC|Fennec|wOSBrowser|BrowserNG|WebOS|Symbian|Windows Phone)/i)
                    return flag
                }
            }
        })
         new Vue({
             el: "#mainbox",
            data: {
                nowyear: '',
                isMobileTurn: false,
                mobileMenuDrawer: false,
                isCollapse: true
            },
            mounted: function () {
                var date = new Date();
                this.nowyear = date.getFullYear();
                if (this.isMobile()) {
                    this.isMobileTurn = true
                } else {
                    this.isMobileTurn = false
                }
            },
            methods: {
                isMobile() {
                    let flag = navigator.userAgent.match(/(phone|pad|pod|iPhone|iPod|ios|iPad|Android|Mobile|BlackBerry|IEMobile|MQQBrowser|JUC|Fennec|wOSBrowser|BrowserNG|WebOS|Symbian|Windows Phone)/i)
                    return flag
                },
                showMobileMenu: function () {
                    this.mobileMenuDrawer = true;
                },
                asideHandleOpen(key, keyPath) {
                    console.log(key, keyPath);
                },
                asideHandleClose(key, keyPath) {
                    console.log(key, keyPath);
                },
                toggleColl: function () {
                    console.log(111)
                    this.isCollapse = !this.isCollapse;
                },
                resetForm(formName) {
                    this.$refs[formName].resetFields();
                }
            }
        })
    </script>
</body>
</html>
    <!-- end #container -->
 