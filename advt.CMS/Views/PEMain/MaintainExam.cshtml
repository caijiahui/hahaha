<div id="app" style="width:90%;">
    <div style="margin-top:30px;margin-left:20px;margin-right:20px">
        <template>
            <el-collapse v-model="activeNames">
                <el-collapse-item name="1">
                    <template slot="title">
                        <span style="font-size:18px;color:white;margin-left:10px"> <i class="el-icon-position"></i> 考试</span>
                    </template>
                    <div @@click="ShowSubject('exam')" style="height:30px;font-size:16px;margin-left:10px;margin-top:10px"> <i class="el-icon-thumb"></i> 考试科目列表</div>
                    <div @@click="ShowSubject('score')" style="height:30px;font-size:16px;margin-left:10px;margin-top:10px"><i class="el-icon-thumb"></i> 考试成绩查询</div>
                </el-collapse-item>
                <el-collapse-item name="2">
                    <template slot="title">
                        <span style="font-size:18px;color:white;margin-left:10px"> <i class="el-icon-position"></i> 问卷调查</span>
                    </template>
                    <div style="height:30px;font-size:16px;margin-left:10px;margin-top:10px"> <i class="el-icon-thumb"></i> Test1</div>
                    <div style="height:30px;font-size:16px;margin-left:10px;margin-top:10px"><i class="el-icon-thumb"></i> Test2</div>
                </el-collapse-item>
                <el-collapse-item name="3">
                    <template slot="title">
                        <span style="font-size:18px;color:white;margin-left:10px"> <i class="el-icon-position"></i> 社团</span>
                    </template>
                    <div style="height:30px;font-size:16px;margin-left:10px;margin-top:10px"> <i class="el-icon-thumb"></i> Test1</div>
                    <div style="height:30px;font-size:16px;margin-left:10px;margin-top:10px"><i class="el-icon-thumb"></i> Test2</div>
                </el-collapse-item>
        </template>
    </div>

</div>
<script src="~/Scripts/Vue/Vue.js"></script>
<script src="~/Scripts/Vue/axios.js"></script>
<script src="~/Scripts/elementUI/lib/index.js"></script>
<script src="~/Scripts/Vue/polyfill.min.js"></script>
<script type="text/javascript">
    new Vue({
        el: '#app',
        data: {
            activeNames:['1','2','3']
        },

        mounted: function () {
            var _this = this;
        },
        methods: {
            ShowSubject: function (ids) {
                if (ids == "exam") { window.location.href = "/PEMain/MaintainSubset" }
