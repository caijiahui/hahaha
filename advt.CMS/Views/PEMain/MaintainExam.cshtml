<style>
    .el-collapse-item__header {
        background-color: #337ab7 !important;
        border-radius: 4px
    }
    .el-collapse-item {
        border: 1px solid #d7dae2 !important;
        border-radius: 2px;
        border-top:0px;
        margin-top: 20px;
    }
    .el-collapse-item__wrap {
        
        border-top: 0px;
        
    }
    .text {
        font-size: 16px;
    }

    .item {
        margin-bottom: 18px;
    }

    .clearfix:before,
    .clearfix:after {
        display: table;
        content: "";
    }

    .clearfix:after {
        clear: both
    }

    .box-card {
        width: 100%;
    }
