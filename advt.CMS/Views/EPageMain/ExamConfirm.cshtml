@model advt.CMS.Models.ExamModel.ExamConfirmModel
@{
    Layout = null;
}

<head>
    <meta charset="UTF-8">
    @*<meta name="viewport" content="user-scalable=no" />*@
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />   @*--移动端上即可出现字体自适应*@
    <title>考试签到</title>
    <link href="~/Scripts/css/font-awesome.css" rel="stylesheet" />
    <link href="~/Scripts/elementUI/lib/theme-chalk/index.css" rel="stylesheet" />
    <link href="~/Scripts/css/exam.css" rel="stylesheet" />
    <style>
       
    </style>
</head>
<div id="app" style="margin-left:20px">
    <div style="margin-top:20px">
        <el-page-header @@back="goBack" content="考试签到">
    </div>
    <div v-if="isMobileTurn=='true'">
        @{ Layout = null; }
    </div>
    <div>
        <template>
            <div>
                <el-select v-model="VProData.WrokPlace" placeholder="请选择区域" style="width:100px;margin-top:10px">
                    <el-option v-for="item in ListWorkPlace" :key="item" :label="item" :value="item"></el-option>
                </el-select>
                <el-select v-model="VProData.DepartCode" placeholder="请选择部门" style="width:100px;">
                    <el-option v-for="item in LDepartCode" :key="item" :label="item" :value="item"></el-option>
                </el-select>
                <el-select v-model="VProData.DutyType" placeholder="请选择班别" style="width:100px;">
                    <el-option label="请选择班别" value=""></el-option>
                    <el-option label="白班" value="白班"></el-option>
                    <el-option label="夜班" value="夜班"></el-option>
                </el-select>

                <el-date-picker v-model="VProData.ExamDate"
                                type="date" value-format="yyyy-MM-dd"
                                placeholder="选择日期" style="width:100px;">
                </el-date-picker>
                <el-input placeholder="工号" v-model="VProData.UserCode" clearable style="width:100px;">
                </el-input>
            </div>
            
            <div style="margin-top: 1px">
                <el-select v-model="VProData.TypeName" placeholder="请选择考试类型" style="width:100px;">
                    <el-option v-for="item in LExamType" :key="item" :label="item" :value="item"></el-option>
                </el-select>
                <el-select v-model="VProData.SubjectName" placeholder="请选择考试科目" style="width:100px;">
                    <el-option v-for="item in LExamSubject" :key="item" :label="item" :value="item"></el-option>
                </el-select>
                <el-input placeholder="姓名" v-model="VProData.UserName" style="width:100px;" clearable>
                </el-input>

                <el-button slot="append" size="medium" @@click="SearchinByName">Search</el-button>
                <a style="color:white" :href="'/ePageMain/ExportConfirmUser?WrokPlace='+VProData.WrokPlace+'&DepartCode='+VProData.DepartCode+'&UserCode='+VProData.UserCode+'&ExamDate='+VProData.ExamDate+'&SubjectName='+VProData.SubjectName+'&TypeName='+VProData.TypeName+'&UserName='+VProData.UserName">
                    <el-button slot="append" size="medium" style="margin-top:1px" v-if="!isMobileTurn">
                        导出
                    </el-button>
                </a>
            </div>
            

            <div style="width:100%;">

                <div>
                    <el-table style="width: 100%;margin-top:20px " border :data="tableData">
                        <el-table-column type="index">
                        </el-table-column>
                        <el-table-column label="操作">
                            <template slot-scope="scope">
                                <el-button size="mini" :disabled="scope.row.IsStartExam == true" @@click="Confirm(scope.row.ID)">签到</el-button>
                            </template>
                        </el-table-column>

                        <el-table-column label="#" v-if="false"
                                         prop="ID">
                        </el-table-column>
                        <el-table-column label="姓名"
                                         prop="UserName">
                        </el-table-column>
                        <el-table-column label="工号"
                                         prop="UserCode">
                        </el-table-column>
                        <el-table-column label="部门"
                                         prop="DepartCode">
                        </el-table-column>

                        <el-table-column label="区域"
                                         prop="OrgName">
                        </el-table-column>

                        <el-table-column label="班别"
                                         prop="DutyType">
                        </el-table-column>

                        <el-table-column label="考试类型"
                                         prop="TypeName">
                        </el-table-column>
                        <el-table-column label="科目"
                                         prop="SubjectName">
                        </el-table-column>
                    </el-table>
                </div>
            </div>

        </template>

    </div>

</div>
    <script src="~/Scripts/Vue/Vue.js"></script>
    <script src="~/Scripts/Vue/axios.js"></script>
    <script src="~/Scripts/elementUI/lib/index.js"></script>
    <script src="~/Scripts/Vue/polyfill.min.js"></script>
    <script type="text/javascript">
        new Vue({
            el: '#app',
            data: {
                dialogFormVisible: false,
                fullscreenLoading: false,
                form: [], 
                tableData: [],
                isMobileTurn: false,
                IsStartExam:false,
                LExamType: [],
                VProData: {},
                LDepartCode: [],
                ListWorkPlace: [],
                ExamDate: '',
                LExamSubject: [],
                UserCode: '',
                UserName:''


            },
            mounted: function () {
                if (this.isMobile()) {
                    this.isMobileTurn = true
                } else {
                    this.isMobileTurn = false
                }
                this.getdata();
                this.aFun();
            },
            watch: {
                'VProData.WrokPlace': function (newval) {
                    var _this = this;
                    axios.post('/EPageMain/GetOrgDepartName', {
                        model: newval
                    }).then(response => {
                        _this.LDepartCode = response.data.LDepartCode;
                    });
                },
                'VProData.TypeName': function (newval) {
                    console.log(newval,146)
                    var _this = this;
                    axios.post('/EPageMain/GetTypeSubjectName', {
                        model: newval
                    }).then(response => {
                        _this.LExamSubject = response.data.LSubject;
                    });
                }
            },
            methods: {
                aFun() {
                    var docElement = document.documentElement;
                    var clientWidthValue = docElement.clientWidth > 750 ? 750 : docElement.clientWidth;
                    docElement.style.fontSize = 20 * (clientWidthValue / 375) + 'px';
                },
                isMobile: function () {
                    let flag = navigator.userAgent.match(/(phone|pad|pod|iPhone|iPod|ios|iPad|Android|Mobile|BlackBerry|IEMobile|MQQBrowser|JUC|Fennec|wOSBrowser|BrowserNG|WebOS|Symbian|Windows Phone)/i)
                    return flag
                },
                changeFun(val) {
                    var _this = this;
                    _this.checkBoxData = val;
                },
               
                handleclose() {
                    var _this = this;
                    _this.dialogUpdateVisible = false;
                },                
                Confirm(ID) {
                    var _this = this;
                    axios.post('/EPageMain/SaveConfirmUser', {
                        model: ID,
                        data: _this.VProData
                    }).then(function (res) {
                        _this.tableData = res.data.tableData;
                    });
                },               
                changeDate: function (dates) {
                    var date = new Date(parseInt(dates.replace("/Date(", "").replace(")/", ""), 10));
                    Y = date.getFullYear() + '-';
                    M = (date.getMonth() + 1 < 10 ? '0' + (date.getMonth() + 1) : date.getMonth() + 1) + '-';
                    D = (date.getDate() < 10 ? '0' + (date.getDate()) : date.getDate()) + ' ';
                    h = (date.getHours() < 10 ? '0' + (date.getHours()) : date.getHours()) + ':';
                    m = (date.getMinutes() < 10 ? '0' + (date.getMinutes()) : date.getMinutes()) + ':';
                    s = (date.getSeconds() < 10 ? '0' + (date.getSeconds()) : date.getSeconds());
                    var NewDtime = Y + M + D + h + m + s;
                    var listDate = new Date(date);
                    var year = listDate.getFullYear();
                    var mon = listDate.getMonth() + 1;
                    var day = listDate.getDate();
                    return year + '-' + mon + '-' + day;
                },
                
                getdata: function () {
                    var _this = this;         
                    axios.post('/EPageMain/ExamConfirmInfo', {
                        data: _this.VProData
                    }).then(function (responese) {
                        _this.tableData = responese.data.tableData;
                        _this.ListWorkPlace = responese.data.ListWorkPlace;
                        _this.LExamType = responese.data.LExamType;
                    })
                },
                SearchinByName() {
                    var _this = this;
                    console.log(_this.VProData)
                    axios.post('/EPageMain/ExamConfirmInfo', {
                        data: _this.VProData
                    }).then(function (responese) {
                        _this.tableData = responese.data.tableData;
                        _this.ListWorkPlace = responese.data.ListWorkPlace;
                        _this.LExamType = responese.data.LExamType;
                    })    
                },
                goBack: function () {
                var _this = this;
                if (_this.isMobileTurn == true) {
                    window.location.href = "/EPageMain/MaintainExam"
                } else {
                    window.location.href = "/EPageMain/MaintainExamPC"
                }
            },

            }

        })


    </script>

